<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/back03"
        android:orientation="vertical"
        tools:context="com.android.ui.book.BookSelect">
    <Button
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="按书名查询"
            android:textSize="30sp"
            android:id="@+id/button12"
            android:onClick="bookname"
            android:layout_weight="1"
            android:background="@drawable/button01"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="按出版社查询"
            android:textSize="30sp"
            android:id="@+id/button13"
            android:onClick="publisher"
            android:background="@drawable/button01"
            android:layout_below="@+id/button12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="按作者查询"
            android:textSize="30sp"
            android:background="@drawable/button01"
            android:id="@+id/button14"
            android:onClick="author"
            android:layout_below="@+id/button13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="按出版日期查询"
            android:textSize="30sp"
            android:id="@+id/button15"
            android:onClick="pubday"
            android:background="@drawable/button01"
            android:layout_weight="1"
            android:layout_below="@+id/button14"
            android:layout_alignRight="@+id/button14"
            android:layout_alignEnd="@+id/button14"/>

    <Button

            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="按书号查询"
            android:textSize="30sp"
            android:id="@+id/button16"
            android:onClick="bookno"
            android:background="@drawable/button01"
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/button15"
            android:layout_alignRight="@+id/button15"
            android:layout_alignEnd="@+id/button15"/>

</LinearLayout>
