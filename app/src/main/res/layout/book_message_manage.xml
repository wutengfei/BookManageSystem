<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/back03"
        android:orientation="vertical"
        tools:context="com.android.ui.book.BookMessageManage">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="新书来了"
            android:textSize="30sp"
            android:id="@+id/button18"
            android:onClick="newBook"
            android:layout_marginTop="20dp"
            android:background="@drawable/button01"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="删除单本图书"
            android:textSize="30sp"
            android:id="@+id/button14"
            android:onClick="deleteOne"
            android:layout_marginTop="20dp"
            android:background="@drawable/button01"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="图书信息查询"
            android:textSize="30sp"
            android:id="@+id/button19"
            android:onClick="select_book"
            android:layout_marginTop="20dp"
            android:background="@drawable/button01"

            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="图书信息修改"
            android:textSize="30sp"
            android:id="@+id/button1"
            android:onClick="update"
            android:layout_marginTop="20dp"
            android:background="@drawable/button01"

            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="显示所有图书信息"
            android:textSize="30sp"
            android:id="@+id/button20"
            android:onClick="book_showAll"
            android:layout_marginTop="20dp"

            android:background="@drawable/button01"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/button01"
            android:layout_weight="1"
            android:text="删除所有图书信息"
            android:textSize="30sp"
            android:onClick="deleteAll"
            android:id="@+id/button21"
            android:layout_marginTop="20dp"

            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/button01"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="保存初始图书信息"
            android:textSize="30sp"
            android:onClick="saveAll"
            android:id="@+id/aveAll"
            />
</LinearLayout>
