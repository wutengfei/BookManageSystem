<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/back03"
        tools:context="com.example.administrator.book.com.AndroidUI.borrow.BorrowMessageSelect">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="查看所有借阅信息"
            android:textSize="30sp"
            android:id="@+id/button"
            android:onClick="show"
            android:background="@drawable/button01"
            android:layout_marginTop="50dp"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="学生借阅信息查询"
            android:textSize="30sp"
            android:id="@+id/button2"
            android:onClick="student"
            android:layout_below="@+id/button"
            android:background="@drawable/button01"
            android:layout_marginTop="50dp"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="图书借阅信息查询"
            android:textSize="30sp"
            android:layout_below="@+id/button2"
            android:id="@+id/button3"
            android:onClick="book"
            android:background="@drawable/button01"
            android:layout_marginTop="50dp"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="超期借书查询"
            android:textSize="30sp"
            android:id="@+id/button4"
            android:onClick="over"
            android:background="@drawable/button01"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
